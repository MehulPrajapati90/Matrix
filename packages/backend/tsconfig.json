{
  "extends": "@workspace/typescript-config/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@workspace/backend/*": ["./convex/*"]
    },

    // ðŸ‘‡ These overrides ensure Convex compiles cleanly
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "preserve",
    "lib": ["ESNext"],

    // optional but recommended
    "outDir": "dist",
    "rootDir": ".",
    "skipLibCheck": true
  },
  "include": ["convex/**/*"],
  "exclude": ["node_modules"]
}
